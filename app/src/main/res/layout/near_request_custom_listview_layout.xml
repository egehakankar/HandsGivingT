<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/volnearreqback"
    android:orientation="horizontal"
    android:weightSum="6">
    >

    <TextView
        android:id="@+id/rowRequestType"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        android:background="#00FFFFFF"
        android:focusable="false"
        android:gravity="center"
        android:text="Request Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#E8032E04"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/rowVolunteerName"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:focusable="false"
        android:gravity="center"
        android:text="Volunteer Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#A9000000"
        android:textColorHighlight="#F3721919"
        app:autoSizeTextType="none" />

    <Button
        android:id="@+id/rowAcceptButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:background="@drawable/volnearreqbackaccept"
        android:text="Kabul Et" />

</LinearLayout>